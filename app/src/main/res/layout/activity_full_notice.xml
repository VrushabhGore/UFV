<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ufv.ca.abby.full_notice">

    <ImageView
        android:id="@+id/full_notice_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/add_btn"
        android:contentDescription="Image" />

    <TextView
        android:id="@+id/full_notice_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/full_notice_image"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/full_notice_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/full_notice_title"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/remove_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="Remove Notice"
        android:textColor="@android:color/white" />


</RelativeLayout>
