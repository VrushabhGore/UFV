<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ufv.ca.abby.full_event">

    <ImageView
        android:id="@+id/full_event_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/add_btn"
        android:contentDescription="@string/image" />

    <TextView
        android:id="@+id/full_event_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_below="@+id/full_event_image"
        android:layout_alignParentStart="true" />



    <Button
        android:id="@+id/remove_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="@string/remove_event"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/download_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/remove_notice"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="@string/download_brouchure"
        android:textColor="@android:color/white" />

</RelativeLayout>
