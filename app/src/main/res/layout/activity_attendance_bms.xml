<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ufv.ca.abby.attendance_bms">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/att_bms_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/upload_att_bms_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/upload_att_bms_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/study_bg_rounder_corner"
        android:text="@string/study_bscit_upload" />

    <EditText
        android:id="@+id/bms_att_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/att_bms_list_view"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/study_material_name"
        android:layout_toStartOf="@+id/choose_att_bms" />

    <ImageButton
        android:id="@+id/choose_att_bms"
        android:layout_width="45dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/upload_att_bms_btn"
        android:background="@color/colorPrimary"
        app:srcCompat="@mipmap/attachment"
        android:contentDescription="@string/attachment" />

</RelativeLayout>
